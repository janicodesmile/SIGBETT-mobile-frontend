<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".DetailBengkel">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

      <include
          layout="@layout/main_toolbar"/>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">


         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_margin="2dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="8dp"
                app:cardUseCompatPadding="true"
                android:elevation="0.5dp"
                app:cardBackgroundColor="@color/white"
                >

               <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/swipe_refreshikm">
                  <ScrollView
                      android:layout_width="match_parent"
                      android:layout_height="350dp"
                      >
                     <ImageView
                         android:layout_width="match_parent"
                         android:layout_height="300dp"
                         android:id="@+id/iv_gambarSampul"
                         android:scaleType="fitXY"
                         />
                  </ScrollView>
               </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

               <androidx.coordinatorlayout.widget.CoordinatorLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                  <com.google.android.material.floatingactionbutton.FloatingActionButton
                      android:id="@+id/btn_go"
                      android:layout_width="90dp"
                      android:layout_height="90dp"
                      android:layout_marginStart="280dp"
                      android:layout_marginTop="10dp"
                      android:backgroundTint="@color/white"
                      app:borderWidth="0dp" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:elevation="6dp"
                      android:text="GO"
                      android:textColor="@color/black"
                      android:textSize="18dp"
                      app:layout_anchor="@id/btn_go"
                      app:layout_anchorGravity="center" />

                  <com.google.android.material.floatingactionbutton.FloatingActionButton
                      android:id="@+id/btn_telp"
                      android:layout_width="90dp"
                      android:layout_height="90dp"
                      android:layout_marginStart="280dp"
                      android:layout_marginTop="110dp"
                      android:backgroundTint="@color/white"
                      app:borderWidth="0dp" />
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/tv_lng"
                      android:visibility="gone"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/tv_lat"
                      android:visibility="gone"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/tel"
                      android:visibility="gone"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:elevation="6dp"
                      android:text="TELP"
                      android:textColor="@color/black"
                      android:textSize="18dp"
                      app:layout_anchor="@id/btn_telp"
                      app:layout_anchorGravity="center" />

               </androidx.coordinatorlayout.widget.CoordinatorLayout>

               <ScrollView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="370dp">
               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/tv_NamaBengkel"
                      android:text="Nama Bengkel"
                      android:textSize="30dp"
                      android:textStyle="bold"
                      android:layout_marginStart="10dp"
                      />

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Hari / Jam :"
                      android:id="@+id/b1"
                      android:textStyle="bold"
                      android:layout_marginStart="10dp"
                      android:textSize="15dp"
                      android:layout_below="@id/tv_NamaBengkel"
                      />
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/harijamDetail"
                      android:text="Hari jam"
                      android:layout_marginStart="120dp"
                      android:textSize="15dp"
                      android:layout_below="@id/tv_NamaBengkel"
                      />

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="10dp"
                      android:text="Jarak          :"
                      android:textStyle="bold"
                      android:textSize="20sp"
                      android:layout_below="@id/b1"
                      />
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="120dp"
                      android:id="@+id/jarakDetail"
                      android:textSize="20sp"
                      android:text="Jarak"
                      android:layout_below="@id/b1"
                      />

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/alamatDetail"
                      android:text="Alamat"
                      android:textStyle="bold"
                      android:layout_below="@id/jarakDetail"
                      android:textSize="18sp"
                      android:layout_marginStart="10dp"
                      android:layout_marginEnd="5dp"
                      />

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Fasilitas :"
                      android:id="@+id/a1"
                      android:layout_below="@id/alamatDetail"
                      android:layout_marginTop="25dp"
                      android:textSize="18sp"
                      android:layout_marginStart="10dp"
                      android:layout_marginEnd="5dp"
                      />
                  <View
                      android:layout_width="wrap_content"
                      android:layout_height="1dp"
                      android:layout_below="@id/a1"
                      android:layout_marginStart="10dp"
                      android:layout_marginEnd="10dp"
                      android:id="@+id/a2"
                      android:background="@color/black"
                      />
                  <androidx.recyclerview.widget.RecyclerView
                      android:id="@+id/recyclefas"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:scrollbars="none"
                      android:layout_below="@id/a2"
                      android:orientation="horizontal"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent" />

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Gambar Lainnya :"
                      android:layout_below="@id/recyclefas"
                      android:textSize="18sp"
                      android:layout_marginStart="10dp"
                      android:layout_marginEnd="5dp"
                      android:id="@+id/a3"
                      />
                  <View
                      android:layout_width="wrap_content"
                      android:layout_height="1dp"
                      android:layout_below="@+id/a3"
                      android:id="@+id/a4"
                      android:layout_marginStart="10dp"
                      android:layout_marginEnd="10dp"
                      android:background="@color/black"
                      />

                  <androidx.recyclerview.widget.RecyclerView
                      android:id="@+id/recycler"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:scrollbars="none"
                      android:layout_below="@+id/a4"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:orientation="horizontal"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintTop_toTopOf="parent" />

               </RelativeLayout>
            </ScrollView>
            </androidx.cardview.widget.CardView>

         </RelativeLayout>

      </RelativeLayout>


   </LinearLayout>

   <RelativeLayout
       android:layout_width="300dp"
       android:layout_height="match_parent"
       android:layout_gravity="start"
       android:background="@color/white">

      <include
          layout="@layout/main_nav_drawer"/>

   </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>